{
  "name": "LocalTube",
  "version": "1.0.1",
  "author": {
    "name": "Atm4x"
  },
  "description": "",
  "main": "main.js",
  "fileAssociations": [
    {
      "ext": [
        "mp4",
        "mkv",
        "webm",
        "avi"
      ],
      "name": "Video",
      "description": "Video File",
      "role": "Viewer"
    }
  ],
  "scripts": {
    "start": "set NODE_ENV=development&& electron .",
    "build": "set NODE_ENV=production&& electron-builder --win --x64",
    "build:mac": "set NODE_ENV=production&& electron-builder --mac --universal"
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "electron": "^31.4.0",
    "electron-builder": "^25.1.8",
    "music-metadata": "^10.2.0"
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "ffmetadata": "^1.7.0",
    "ffmpeg-installer": "^1.0.2",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "moment": "^2.30.1",
    "mp4box": "^0.5.2",
    "node-fetch": "^2.6.7",
    "node-ffmpeg-installer": "^1.1.2",
    "plyr": "^3.7.8",
    "winreg": "^1.2.5"
  },
  "build": {
  "appId": "com.localtube.app",
  "productName": "LocalTube",
  "directories": {
    "output": "dist"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": ["x64"]
      }
    ],
    "icon": "./assets/icon.ico"
  },
  "mac": {
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      }
    ],
    "icon": "./assets/icon.icns",
    "category": "public.app-category.video",
    "darkModeSupport": true
  },
  "asar": true,
  "asarUnpack": [
    "downloads/**/*",
    "node_modules/ffmpeg-static/**/*",
    "node_modules/ffprobe-static/**/*"
  ],
  "files": [
    "**/*",
    "!downloads/**/*",
    "!dist/**/*",
    "!build/**/*"
  ],
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,  
    "shortcutName": "LocalTube",
    "uninstallDisplayName": "LocalTube", 
    "deleteAppDataOnUninstall": false
  },
  "extraResources": [
    {
      "from": "node_modules/ffmpeg-static/${platform === 'win32' ? 'win32/ffmpeg.exe' : 'ffmpeg'}",
      "to": "${platform === 'win32' ? 'ffmpeg.exe' : 'ffmpeg'}"
    },
    {
      "from": "node_modules/ffprobe-static/bin/${platform === 'win32' ? 'win32/x64/ffprobe.exe' : 'darwin/x64/ffprobe'}",
      "to": "${platform === 'win32' ? 'ffprobe.exe' : 'ffprobe'}"
    },
    {
      "from": "assets/",
      "to": "assets/"
    }
  ]
}
}